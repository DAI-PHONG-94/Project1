@model IEnumerable<Example.Models.Entities.Employee>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Employee Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Employee Name</th>
                <th>Employee Code</th>
                <th>Rank</th>
                <th>Department</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.EmployeeCode</td>
                    <td>@employee.Rank</td>
                    <td>@employee?.Department?.DepartmentName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@employee.EmployeeId">Details</a> |
                        <a asp-action="Edit" asp-route-id="@employee.EmployeeId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@employee.EmployeeId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>