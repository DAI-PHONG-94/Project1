@model IEnumerable<Example.Models.Entities.Department>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Department Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Department ID</th>
                <th>Department Name</th>
                <th>Department Code</th>
                <th>Address</th>
                <th>Room Number</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.DepartmentId</td>
                    <td>@department.DepartmentName</td>
                    <td>@department.DepartmentCode</td>
                    <td>@department.Location</td>
                    <td>@department.NumberOfPersonals</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@department.DepartmentId">Details</a> |
                        <a asp-action="Edit" asp-route-id="@department.DepartmentId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@department.DepartmentId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>