@model namespace Example.Views.Department


<h2>Delete Department</h2>

<p>Are you sure you want to delete this department?</p>

<dl class="row">
    <dt class="col-sm-2">Department ID</dt>
    <dd class="col-sm-10">@Model.DepartmentId</dd>

    <dt class="col-sm-2">Department Name</dt>
    <dd class="col-sm-10">@Model.DepartmentName</dd>

    <!-- Add other fields as needed -->
</dl>

<form asp-action="Delete" asp-route-id="@Model.DepartmentId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
